{
  "compilerOptions": {
    "target": "ES2020",                      // ← allows newer JS features
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true                     // ← 💣 disables type-checking in node_modules
  },
  "include": ["src"],
  "exclude": ["src/__tests__"]
}
